# Top-most EditorConfig file
root = true

# Indentation
[*]
indent_style = space
indent_size = 4

# Encoding and line endings
[*.{cs,txt}]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Trim trailing whitespace
[*.{cs,txt}]
trim_trailing_whitespace = true

# Set default file type
[*.cs]

[*.{cs,vb}]
dotnet_csharpier=true

